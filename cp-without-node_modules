#!/bin/bash

if [ "$#" -lt 2 ]; then
  echo "Usage: cp-without-node_modules SOURCE DEST"
  echo "(SOURCE dir without trailing slash)"
  exit
fi

SOURCE="$1"
DEST="$2"

mkdir -p "$DEST"

set -x

rsync \
  --archive\
  --recursive\
  --verbose\
  --exclude='.awcache'\
  --exclude='.git'\
  --exclude='.hg'\
  --exclude='node_modules'\
  --exclude='vendor'\
  "$SOURCE/" "$DEST"

ls -al "$DEST"
